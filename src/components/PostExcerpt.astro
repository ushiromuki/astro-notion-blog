---
import { Post } from '../lib/interfaces.ts'

export interface Props {
  post: Post
}

const { post } = Astro.props
---

<div class="post-excerpt">
  <p>{post.Excerpt ? post.Excerpt : ''}</p>
</div>

<style>
  .post-excerpt {
    padding: 0 0.4rem ;
    font-size: 0.9rem;
  }

  .post-excerpt p {
    margin: 0;
  }
</style>
