---
import { getPageLink } from '../lib/blog-helpers.ts'

export interface Props {
  currentPage: number
  numberOfPages: number
  tag: string
}

const { currentPage, numberOfPages, tag = '' } = Astro.props

const isFirstPage = currentPage === 1
const isLastPage = currentPage === numberOfPages

const startPage = currentPage - 2 < 1 ? 1 : currentPage - 2
const endPage =
  currentPage + 2 > numberOfPages ? numberOfPages : currentPage + 2

let pages = []
for (let i = startPage; i <= endPage; i++) {
  pages.push(i)
}
---
<div class="pagination">
  <a href={getPageLink(1, tag)} class={isFirstPage ? 'inactive' : undefined}>&lt;&lt;</a>
  {
    pages.map((p: number) => (
      <a href={getPageLink(p, tag)} class={p === currentPage ? 'inactive' : undefined}>
        {p}
      </a>
    ))
  }
  <a href={getPageLink(numberOfPages, tag)} class={isLastPage ? 'inactive' : undefined}>&gt;&gt;</a>
</div>

<style>
  .pagination {
    display: flex;
    width: 100%;
    margin: 0 auto;
    color: var(--accents-1);
    justify-content: center;
    align-items: center;
  }
  .pagination a {
    display: block;
    width: 2.4rem;
    height: 3rem;
    margin: 0 0.4rem;
    border-bottom: dotted 2px var(--accents-1);
    color: inherit;
    font-size: 0.85rem;
    text-align: center;
    font-weight: 500;
    line-height: 3rem;
  }
  .pagination a:hover:not(.inactive) {
    opacity: 0.5;
  }
  .pagination a.inactive {
    color: var(--second-text);
    text-decoration: none;
    border-bottom: dotted 2px var(--second-text);
    opacity: 0.5;
  }
</style>
