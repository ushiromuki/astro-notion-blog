---
export const prerender = true
import type { RichText } from '../../lib/interfaces.ts'

export interface Props {
  richTexts: RichText[]
}

const { richTexts = [] } = Astro.props
const hasContent = richTexts.length > 0 && richTexts[0]?.Text?.Content
const captionText = hasContent ? richTexts[0].Text?.Content : ''
---

{
  hasContent && (
    <div class="caption">
      <div>{captionText}</div>
    </div>
  )
}

<style>
  .caption {
    display: flex;
    margin-top: 0.3rem;
    font-size: 0.9rem;
    color: var(--accents-3);
    white-space: pre-wrap;
    word-break: break-word;
    line-height: 1.4;
  }
  .caption > div {
    flex-grow: 1;
    width: 0;
  }
</style>
