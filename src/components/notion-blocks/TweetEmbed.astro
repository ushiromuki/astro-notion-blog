---
export interface Props {
  url: URL | string
}

const { url: urlProp } = Astro.props

// URLオブジェクトに変換（すでにURLオブジェクトの場合はそのまま）
const url = typeof urlProp === 'string' ? new URL(urlProp) : urlProp;

const postURL =
  url.hostname === 'x.com' || url.hostname === 'www.x.com'
    ? new URL(url.pathname, 'https://twitter.com')
    : url
---

<div class="tweet-embed">
  <blockquote class="twitter-tweet">
    <a href={postURL.toString()}></a>
  </blockquote>
</div>

<script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>

<style>
  .tweet-embed {
    width: 100%;
    max-width: 640px;
    margin: auto;
  }
  .tweet-embed div:first-child div:first-child {
    margin: auto;
  }
</style>
